<h1>Blog Posts</h1>
{{#if logged_in}}
  <a href="/dashboard">Dashboard</a>
  <a href="/logout">Logout</a>
{{else}}
  <a href="/login">Login</a>
  <a href="/signup">Sign Up</a>
{{/if}}
<ul>
  {{#each posts}}
    <li>
      <a href="/post/{{this.id}}">{{this.title}}</a>
      <p>{{this.created_at}}</p>
    </li>
  {{/each}}
</ul>
